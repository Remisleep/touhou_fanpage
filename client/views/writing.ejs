<html>
    <head>
        <title>Share your score</title>
        <%- include('header.ejs') %>
    </head>

    <body>
        <div id=mainpanel">
            <h1>
                Player Scores
            </h1>

            <h2>
                Make a post about your scores for a Touhou game. Include the game, difficutly and character.
            </h2>

            <% if(draft._id) { %>
                <form action="/scoreblog/<%=draft._id%>/edit" method="POST">
            <% } else { %>
                <form action="/scoreblog/writepost" method="POST">
            <% } %>

                <input id = title name="title" type="text"/><br/>
                
                <textarea name="body" style="width:80%; height:500px">
<% if(draft) { %><%= draft.body %><% } %>
                </textarea><br/>

                <% if(draft.title) { %>
                    <button type="submit">Update</button>
                <% } else { %>
                    <button type="submit">Post</button>
                <% } %>
            </form>
        </div>
        <%- include('navbar.ejs') %>

        <script>
                var title= "<%=draft.title%>";

                $(()=>{
                    if(title!= "") $('#title').val(title);
                });
        </script>
    </body>
</html>